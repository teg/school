!!! 5
%html
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title #{controller.controller_name} : #{controller.action_name}

    = stylesheet_link_tag 'scaffold'
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'

    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'

    = javascript_include_tag :defaults

  %body

  .login_menu
    %ul
    - if !current_student
      %li= link_to "Register", new_student_path
      %li= link_to "Log In", new_student_session_path
    - else
      %li= link_to "My Account", current_student
      %li= link_to "Logout", current_student_session, :method => :delete, :confirm => "Are you sure you want to logout?"

  .heading
    %h1 John's institute

  .flash
    = flash[:notice]

  .content
    = yield